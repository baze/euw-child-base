<section class="_module-lp-benefits _module-entry-content">

    {% if post.benefits_headline %}
        <h2 class="section-headline">{{ post.benefits_headline }}</h2>
    {% endif %}

    {% if post.benefits_intro %}
        <div class="section-text">{{ post.benefits_intro|nl2br }}</div>
    {% endif %}

    {% if post.get_field('benefits_items') %}
        <ol class="benefits">
            {% for benefit in post.get_field('benefits_items') %}
                {% if benefit.title %}
                    <li>
                        <span class="benefit-title">{{ benefit.title }}</span>
                        <span class="benefit-description">{{ benefit.description }}</span>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    {% endif %}

    {% if post.benefits_outro %}
        <div class="section-text">{{ post.benefits_outro|nl2br }}</div>
    {% endif %}

</section>