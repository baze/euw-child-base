<article class="post post--small _snippet-post--small {{ post.post_type }} {{ post.post_type }}--small _snippet-{{ post.post_type }}--small">

    {% if post.image %}
        <div class="post-image">
            <a href="{{ post.link }}">
                <img src="{{ TimberImage(post.image) }}" alt=""/>
            </a>
        </div>
    {% endif %}

    <h4 class="post-title"><a href="{{ post.link }}">{{ post.title }}</a></h4>

    <div class="post-excerpt">{{ post.description | excerpt(20) }}</div>

    <a class="post-link btn" href="{{ post.link }}">{{ _e('Weiterlesen.') }}</a>
</article>