<div class="_snippet-post-links">

    {% set next = post.next %}
    {% set prev = post.prev %}

    {% if invert %}
        {% set next = post.prev %}
        {% set prev = post.next %}
    {% endif %}

    {% if next %}
        <a href="{{ next.link }}" class="post-link post-link-next" rel="next" title="{{ next.title }}"></a>
    {% endif %}

    {% if prev %}
        <a href="{{ prev.link }}" class="post-link post-link-prev" rel="prev"
           title="{{ prev.title }}"></a>
    {% endif %}
</div>