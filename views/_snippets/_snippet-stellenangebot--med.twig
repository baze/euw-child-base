<article class="flexible-content-article {{ post.post_type }} {{ post.post_type }}--med">

    <div class="content-container">
        <div class="content-container-inner">
            <div class="content">
                <div class="content-wrapper">
                    <header>
                        <h4 class="flexible-content-headline">
                            <a href="{{ post.link }}">
                                {{ post.post_title }}
                            </a>
                        </h4>
                    </header>

                    {% if post.description %}
                        <div class="flexible-content-text">
                            {{ post.description|shortcodes|excerpt(20) }}
                        </div>
                    {% endif %}

                    <footer>
                        <a href="{{ post.link }}" class="flexible-content-link btn">{{ _e('Mehr erfahren') }}</a>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</article>