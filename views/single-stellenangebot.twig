{% extends "base.twig" %}

{% block page_header %}
    {% include '_modules/_module-page-header.twig' with {
    'supporting_headline' : post.headline,
    'title' : post.post_title
    } %}
{% endblock %}

{% block content %}
    {% include ['_content/_content-single-' ~ post.id ~ '.twig', '_content/_content-single-' ~ post.post_type ~ '.twig', '_content/_content-single.twig'] %}
{% endblock %}